<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:controls="clr-namespace:JVOS.Controls;assembly=JVOS.Controls"
             x:Class="JVOS.EmbededWindows.Preferences.ColorsPage">
	<StackPanel x:Name="rootStack">
		<Border Classes="Beta Outer" Padding="8, 4" Margin="8">
			<StackPanel x:Name="coloringStack">
				<TextBlock Text="Coloring" Classes="h3"/>
				<CheckBox Margin="4" x:Name="useAutoColor" Content="Use Auto Color"/>
			</StackPanel>
		</Border>
		<Border Classes="Beta Outer" Padding="8, 4" Margin="8">
			<StackPanel>
				<TextBlock Text="Style" Classes="h3"/>
				<CheckBox Margin="4" x:Name="useDarkMode" Content="Use Dark Mode"/>
				<CheckBox Margin="4" x:Name="useAccentTitle" Content="Use Accent Title"/>
				<CheckBox Margin="4" x:Name="useAccentBar" Content="Use Accent Bar"/>
			</StackPanel>
		</Border>
	</StackPanel>
</UserControl>
